<Window x:Class="Projekat.Pomocne_klase.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat.Pomocne_klase"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None" 
        Title="" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Border BorderBrush="Black"
            BorderThickness="1">
        <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <TextBlock Name="txtPoruka"
                   FontSize="20"
                   Margin="0, 10, 0, 100"
                   Text="Kreiranje projekta u toku"
                   HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" 
                     Height="10"
                     Width="500"/>

        </StackPanel>
    </Border>
</Window>
