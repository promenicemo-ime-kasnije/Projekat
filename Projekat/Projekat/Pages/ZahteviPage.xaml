            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1"> <!--DESNA STRANA-->
            <TextBlock Text="Filteri prikaza"
                       FontSize="18"
                       Margin="120 0 0 0"
                       FontWeight="DemiBold"/>
            <TextBlock Text="Datum"
                       FontSize="15"
                       Margin="20 20 30 0"/>
            <Separator Margin="20 3 20 0"/>
            <DatePicker Margin="25 7 30 0"
                        materialDesign:HintAssist.Hint="Početni datum"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <DatePicker Margin="25 7 30 0"
                        materialDesign:HintAssist.Hint="Krajnji datum"
                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>
            <TextBlock Text="Član"
                       FontSize="15"
                       Margin="20 30 30 0"/>
            <Separator Margin="20 3 20 0"/>
            <CheckBox  Style="{StaticResource MaterialDesignCheckBox}"
                       Margin="25 7 30 0">
                Ahmet Halilović
            </CheckBox>
            <CheckBox  Style="{StaticResource MaterialDesignCheckBox}"
                       Margin="25 7 30 0">
                Armin Bronja
            </CheckBox>
            <CheckBox  Style="{StaticResource MaterialDesignCheckBox}"
                       Margin="25 7 30 0">
                Samed Bejtović
            </CheckBox>
            <!--FLIPPERRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRR-->
            <materialDesign:Flipper Margin="20 30 10 0"
                                    Style="{StaticResource MaterialDesignCardFlipper}"
                                    HorizontalAlignment="Stretch">
                <materialDesign:Flipper.FrontContent>
                    <Button Command="{x:Static materialDesign:Flipper.FlipCommand}"
                            FontSize="18"
                            Height="50">
                        Dodaj novi zahtev
                    </Button>
                </materialDesign:Flipper.FrontContent>
                <materialDesign:Flipper.BackContent>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <materialDesign:ColorZone Mode="Accent"
                                                  Padding="7"
                                                  Background="#2196f3">
                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                                        Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                        HorizontalAlignment="Left"
                                        Foreground="White">
                                    <materialDesign:PackIcon Kind="ArrowLeft"
                                                             HorizontalAlignment="Right" />
                                </Button>
                                <TextBlock Margin="8 0 0 0"
                                           VerticalAlignment="Center"
                                           Foreground="White">
                                Nazad
                                </TextBlock>
                            </StackPanel>
                        </materialDesign:ColorZone>
                        <StackPanel Grid.Row="1"
                              Margin="0 6 0 0"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top">
                            <ComboBox materialDesign:HintAssist.Hint="Odaberi prijemnika"
                                      VerticalAlignment="Bottom"
                                      IsEditable="True"
                                      Margin="25 10 25 0"
                                      FontSize="15"
                                      ItemsSource="{Binding LongListToTestComboVirtualization}">

                                <ComboBox.Text>
                                    <Binding
                                Path="SelectedTextTwo"
                                Mode="TwoWay"
                                UpdateSourceTrigger="PropertyChanged">
                                    </Binding>
                                </ComboBox.Text>
                                <ComboBoxItem>Investitor</ComboBoxItem>
                                <ComboBoxItem>Ahmet Halilovic</ComboBoxItem>
                                <ComboBoxItem>Goran Markovic</ComboBoxItem>
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <VirtualizingStackPanel />
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <TextBox materialDesign:HintAssist.IsFloating="true"
                                     materialDesign:HintAssist.Hint="Kategorija"
                                     FontSize="15"
                                     Margin="25 20 100 0">
                            </TextBox>
                            <TextBox materialDesign:HintAssist.IsFloating="true"
                                     materialDesign:HintAssist.Hint="Opis"
                                     FontSize="15"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     Margin="25 7 25 0">
                            </TextBox>
                            <Button Margin="25 40 25 30">
                                Dodaj zahtev
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Flipper.BackContent>
            </materialDesign:Flipper>
        </StackPanel>
