                    <Grid Height="350" Width="250">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="9*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Zahtev od:            Ahmet Halilović" FontSize="15" Margin="10 10 10 5" FontWeight="DemiBold"/>
                        <TextBlock Grid.Row="1" FontSize="14" Margin="10 10 10 5" TextWrapping="Wrap">
                            <Run Text="Termoizolacija" FontWeight="SemiBold"/>
                            <LineBreak/>
                            <Run Text="10 kvadrata staklene vune"/>
                            <LineBreak/>
                            <Run Text="50 kanti lijepka za stiropor"/>
                            <LineBreak/>
                            <Run Text="10 toplih sendvica :P"/>
                            <LineBreak/>
                            <Run Text="100 kvadrata stiropora"/>
                        </TextBlock>
                        <Grid Grid.Row="2">
                            <StackPanel>
                                <Separator Style="{StaticResource MaterialDesignDarkSeparator}"
                                           Margin="8 -5 8 -5" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel>
                                        <TextBlock FontSize="15" FontWeight="DemiBold" Margin="20 8 0 0">
                                             čeka potvrdu
                                        </TextBlock>
                                        <TextBlock FontSize="15" FontWeight="Light" Margin="20 0 0 0">
                                            11.5.2019. 15:45h
                                        </TextBlock>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Margin="0 5 0 0" 
                                        IsHitTestVisible="False" Background="#ff8d14" BorderBrush="#ff8d14">
                                        
                                        <materialDesign:PackIcon Kind="TimerSandEmpty" />
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
