<Page x:Class="Projekat.Pages.DokumentaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DokumentaPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:usercontrols="clr-namespace:Projekat.UserControls"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}">

    
    <!--Priznajem da je ovo dosta lose uradjeno, najgori copy paste
        Pokusavao sam da ovo malo poboljsam, da napravim userControlu koja predstavlja jednu listu dokumenata pa da to posle 
        nekako iskombinujem ali mi to nije uspelo, ako ovo neko cita neka to ispravi ako zna-->

    <ScrollViewer>
        <StackPanel HorizontalAlignment="Center" Margin="20">

            <!--Priprema za izgradju-->
            <Expander Header="Priprema za izgradnju"
                      BorderThickness="1"
                      BorderBrush="Black"
                      Margin="5"
                      Padding="10">
            
                <StackPanel>
                
                    <!--Lokacijski uslovi-->
                    <usercontrols:ListaDokumenata Naslov="Lokacijski uslovi"
                                                  Dokumenta="{Binding OblastLokacijskiUslovi}"/>

                    <!--Gradjevinska dozvola-->
                    <usercontrols:ListaDokumenata Naslov="Gradjevinska dozvola"
                                                  Dokumenta="{Binding OblastGradjevinskaDozvola}"/>

                </StackPanel>
            
            </Expander>

            <!--Izgradnja-->
            <usercontrols:ListaDokumenata Naslov="Izgradnja"
                                          Dokumenta="{Binding OblastIzgradnja}"/>

        </StackPanel>
    </ScrollViewer>

</Page>
