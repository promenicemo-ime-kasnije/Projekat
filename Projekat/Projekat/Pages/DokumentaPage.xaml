    <ScrollViewer MouseWheel="ScrollViewer_MouseWheel">
        <StackPanel HorizontalAlignment="Center" Margin="20">

            <!--Priprema za izgradju-->
            <Expander Header="Priprema za izgradnju"
                      BorderThickness="1"
                      BorderBrush="Black"
                      Margin="5"
                      Padding="10">
            
                <StackPanel>
                
                    <!--Lokacijski uslovi-->
                    <usercontrols:ListaDokumenata Naslov="Lokacijski uslovi"
                                                  Dokumenta="{Binding Dokumenta}"/>

                    <!--Gradjevinska dozvola-->
                    <usercontrols:ListaDokumenata Naslov="Gradjevinska dozvola"
