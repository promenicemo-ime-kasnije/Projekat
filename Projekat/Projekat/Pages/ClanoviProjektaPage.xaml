<Page x:Class="Projekat.Pages.ClanoviProjektaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClanoviProjektaPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="20"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!--Naslov-->
            <RowDefinition Height="*"/>     <!--Liste-->
            <RowDefinition Height="Auto"/>  <!--Buttoni-->
        </Grid.RowDefinitions>

        <!--Naslov - mozda ovo moze i da se izbaci-->
        <TextBlock Text="Clanovi projekta" 
                   FontSize="40"
                   HorizontalAlignment="Center"
                   Margin="0, 0, 0, 20"/>
        
        <!--Liste-->
        <Grid Grid.Row="1"
              HorizontalAlignment="Center">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="320"/>
                <ColumnDefinition Width="Auto" MinWidth="320"/>
            </Grid.ColumnDefinitions>

            
            <!--Lista svih korisnika koji nisu aktivni na projektu-->
            <TextBlock Text="Svi korisnici"/>

            <Border BorderBrush="Black" 
                    BorderThickness="1"
                    Grid.Row="1"
                    Margin="1, 20">
                <ListView ItemsSource="{Binding SviKorisnici}" 
                          MouseLeftButtonUp="PrebaciUDruguListu_Click"
                          Tag="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!--Ikonica-->
                                <materialDesign:PackIcon Kind="Person"
                                                         Margin="10"
                                                         VerticalAlignment="Center"/>
                                <StackPanel>
                                    <!--Puno ime korisnika-->
                                    <TextBlock Text="{Binding PunoIme}" 
                                               Margin="10"
                                               FontSize="15"/>
                                    <!--Vrsta korisnika-->
                                    <TextBlock Text="{Binding VrstaKorisnika}" 
                                               Margin="10, 0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Blue"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            
            
            <!--Lista korisnika koji su aktivni na projektu-->
            <TextBlock Text="Korisnici koji rade na ovom projektu" 
                       Grid.Column="1"/>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="1, 20">
                <ListView ItemsSource="{Binding KorisniciKojiRadeNaProjektu}" 
                          MouseLeftButtonUp="PrebaciUDruguListu_Click"
                          Tag="2">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!--Ikonica-->
                                <materialDesign:PackIcon Kind="Person"
                                                         Margin="10"
                                                         VerticalAlignment="Center"/>
                                <StackPanel>
                                    <!--Puno ime korisnika-->
                                    <TextBlock Text="{Binding PunoIme}" 
                                               Margin="10"
                                               FontSize="15"/>
                                    <!--Vrsta korisnika-->
                                    <TextBlock Text="{Binding VrstaKorisnika}" 
                                               Margin="10, 0" 
                                               HorizontalAlignment="Center" 
                                               Foreground="Blue"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>
            
        </Grid>
        
        <!--Buttoni-->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Grid.Row="2">
            <Button Content="Zapamti izmene"
                    Margin="20"
                    Click="ZapamtiIzmene_Click"/>
            <Button Content="Idi na projekat"
                    Margin="20"
                    Click="OtvoriProjectPage_Click"/>
        </StackPanel>
    </Grid>
</Page>
