<Page x:Class="Projekat.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Projekat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProjectPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"        
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}">


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>  <!--Command bar-->
            <RowDefinition Height="*"/>     <!--Ostatak stranice-->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>  <!--Projekat-->
            <ColumnDefinition Width="Auto"/> <!--Refresh-->
            <ColumnDefinition Width="*"/>    <!--Prazno-->
            <ColumnDefinition Width="Auto"/> <!--Podesavanja-->
        </Grid.ColumnDefinitions>
        


        <Expander Header="Trenutni projekat"
                  Panel.ZIndex="3"
                  Grid.Column="0"
                  Foreground="White"
                  Background="{DynamicResource PrimaryHueMidBrush}">
            <!--Lista projekata-->
            <ListView ItemsSource="{Binding ListaProjekata}"
                        Margin="10"
                        Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">

                            <!--Ikonica-->
                            <materialDesign:PackIcon Kind="House" 
                                                Margin="10"/>
                            <!--Tip projekta-->
                            <TextBlock Text="{Binding}" 
                                Margin="5" 
                                VerticalAlignment="Center" 
                                FontSize="15"/>

                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Expander>

        <Button Content="Refresh"
                materialDesign:ShadowAssist.Darken="False"
                Grid.Column="1"/>

        <Button Content="Podesavanja"
                    Grid.Column="3"/>

        <!--TextBlock Text="Project Page"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   Margin="20"/>
            <Button Content="Meni"
                Click="PrikaziMeni_Click"
                Margin="100, 20, 100, 200"/>
            <Button Content="Nazad"
                Click="Nazad_Click"/>-->

    </Grid>
</Page>
